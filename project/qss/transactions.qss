#productCard {
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 10px;
    margin: 5px;
    background: #fff;
}

#productName {
    font-weight: bold;
    font-size: 14px;
}

#productPrice {
    color: #007bff;
    font-size: 13px;
    margin-bottom: 5px;
}

#cartTitle {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 10px;
}
